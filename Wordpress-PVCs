apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: wordpress-pvc1
  namespace: wordpress
spec:
  accessModes:
    - ReadWriteMany
  resources:
    requests:
      storage: 100Gi
  volumeName: volumen-wordpress1
---
